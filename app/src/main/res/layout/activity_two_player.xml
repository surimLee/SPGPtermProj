<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E8EAEC"
    tools:context=".OnePlayerActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your name?"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/playernamebox"
        android:textColor="#043162"
        android:textSize="25sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/playernamebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/player1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/whiterec"
            android:fontFamily="monospace"
            android:hint="player1"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:textColor="#043162"
            android:textColorHint="#BABABA" />

        <EditText
            android:id="@+id/player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/whiterec"
            android:fontFamily="monospace"
            android:hint="player2"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:textColor="#043162"
            android:textColorHint="#BABABA" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/whiterec"
        android:fontFamily="monospace"
        android:textColor="#043162"
        android:textSize="17sp"
        android:text="Continue" />

</RelativeLayout>